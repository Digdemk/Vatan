
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<h1>Edit</h1>
@model Vatan.Areas.Admin.Models.VM.UserVM

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-primary">
                <h4 class="card-title">Edit User</h4>
                <p class="card-category">Edit a user</p>
            </div>
            <div class="card-body">
                <form action="/Admin/User/Edit" method="post">

                    @await Html.PartialAsync("Partial/UserForm")

                    @Html.HiddenFor(q => q.ID)

                    <button type="submit" class="btn btn-primary pull-right">Edit User</button>
                    <div class="clearfix"></div>
                </form>
            </div>
        </div>
    </div>
</div>
