
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@model Vatan.Models.VM.HomeVM

<div class="row" style="margin-bottom:20px">
    <div class="col-md-3">
        <div class="card card-stats">
            <div class="card-header card-header-warning card-header-icon">

                <h3 class="card-title">
                    @ViewBag.TotalUser
                    <small>Users</small>
                </h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card card-stats">
            <div class="card-header card-header-info card-header-icon">

                <h3 class="card-title">
                    @ViewBag.TotalCategory
                    <small>Categorys</small>
                </h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card card-stats">
            <div class="card-header card-header-primary card-header-icon">

                <h3 class="card-title">
                    @ViewBag.TotalProduct
                    <small>Products</small>
                </h3>
            </div>
        </div>
    </div>
</div>

<div class="row" style="margin-bottom:20px">
    <div class="col-lg-6 col-md-12">
        <div class="card">
            <div class="card-header card-header-warning">
                <h4 class="card-title">Categories</h4>
                <p class="card-category">All categories of this page</p>
            </div>
            <div class="card-body table-responsive">
                <table class="table table-hover">
                    <thead class="text-warning">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Top Category</th>



                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Categories)
                        {
                            <tr id="@item.ID">
                                <td>@item.ID</td>
                                <td>@item.CategoryName</td>
                                <td>@item.TopCategoryID</td>


                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-lg-6 col-md-12">
        <div class="card">
            <div class="card-header card-header-info">
                <h4 class="card-title">Authors</h4>
                <p class="card-category">All authors of this page</p>
            </div>
            <div class="card-body table-responsive">
                <table class="table table-hover">
                    <thead class="text-info">
                        <tr class="text-center">
                            <th>ID</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Quantity</th>
                            <th>Price</th>
                            <th>Category</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Products)
                        {
                            <tr class="text-center">
                                <td>@item.ID</td>
                                <td>@item.ProductName</td>
                                <td>@item.Description</td>
                                <td>@item.Quantity</td>
                                <td>@item.Price</td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<div class="row">
    <div class="col-lg-6 col-md-12">
        <div class="card">
            <div class="card-header card-header-primary">
                <h4 class="card-title">Users</h4>
                <p class="card-category">All user of this page</p>
            </div>
            <div class="card-body table-responsive">
                <table class="table table-hover">
                    <thead class="text-primary">
                        <tr class="text-center">
                            <th>ID</th>
                            <th>Name</th>
                            <th>Surname</th>
                            <th>Mail</th>
                            <th>Phone</th>
                            <th>Address</th>
                            @*<th>Password</th>*@
                            @*<th>Author</th>*@
                            @*<th>Category</th>*@
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Users)
                        {
                            <tr class="text-center">
                                <td>@item.ID</td>
                                <td>@item.Name</td>
                                <td>@item.Surname</td>
                                <td>@item.Mail</td>
                                <td>@item.Phone</td>
                                <td>@item.Address</td>
                                @*<td>@item.Password</td>*@
                                @*<td>@item.AuthorID</td>*@
                                @*<td>@item.CategoryID</td>*@
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

