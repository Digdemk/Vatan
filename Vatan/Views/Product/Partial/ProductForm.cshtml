@model Vatan.Models.VM.ProductVM

<div class="form-group row">
    @Html.LabelFor(q => q.ProductName, new { @class = "col-sm-3 text-right control-label col-form-label" })
    <div class="col-sm-9">
        @Html.TextBoxFor(q => q.ProductName, new { @placeholder = "Enter Product name", @class = "form-control", @id = "fname" })
        @Html.ValidationMessageFor(q => q.ProductName, "", new { @class = "text-danger" })
    </div>
</div>
<div class="form-group row">
    @Html.LabelFor(q => q.Description, new { @class = "col-sm-3 text-right control-label col-form-label" })

    <div class="col-sm-9">
        @Html.TextBoxFor(q => q.Description, new { @placeholder = "Enter description", @class = "form-control", @id = "duration" })
        @Html.ValidationMessageFor(q => q.Description, "", new { @class = "text-danger" })
    </div>
</div>
<div class="form-group row">
    @Html.LabelFor(q => q.Quantity, new { @class = "col-sm-3 text-right control-label col-form-label" })
    <div class="col-sm-9">
        @Html.TextBoxFor(q => q.Quantity, new { @placeholder = "Enter quantity", @class = "form-control", @id = "posterurl" })
        @Html.ValidationMessageFor(q => q.Quantity, "", new { @class = "text-danger" })
    </div>
</div>
<div class="form-group row">
    @Html.LabelFor(q => q.Price, new { @class = "col-sm-3 text-right control-label col-form-label" })
    <div class="col-sm-9">
        @Html.TextBoxFor(q => q.Price, new { @type = "text", @placeholder = "Enter price", @class = "form-control mydatepicker" })
        @Html.ValidationMessageFor(q => q.Price, "", new { @class = "text-danger" })
    </div>

</div>

<div class="form-group row">
    <label class="col-sm-3 text-right control-label col-form-label">Multiple Select</label>
    <div class="col-md-9">
        <select name="categoryArray" class="select2 form-control" multiple="multiple">
            @foreach (var item in Model.categories)
            {
                <option value="@item.ID">@item.CategoryName</option>

            }
        </select>
    </div>
</div>
